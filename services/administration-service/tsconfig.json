{
  "extends": [
    "@tsconfig/esm/tsconfig",
    "@tsconfig/node18/tsconfig",
    "@tsconfig/strictest/tsconfig"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "skipLibCheck": true
  }
}
